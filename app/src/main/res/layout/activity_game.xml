<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main"
    android:orientation="vertical"
    tools:context=".game">

  <View
        android:background="@color/white"
        android:layout_width="150dp"
        android:layout_height="10dp"
        android:layout_gravity="center"></View>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="YUC"
        android:textColor="@color/white"
        android:textSize="10pt"
        android:gravity="center_horizontal"></TextView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:background="@color/white"
            android:layout_width="330dp"
            android:layout_height="1dp"
            android:layout_gravity="center"></View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/style"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="Game"></TextView>

    </LinearLayout>


  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="20dp"
      tools:layout_editor_absoluteY="10dp">
  </androidx.constraintlayout.widget.ConstraintLayout>


  <Button
      android:id="@+id/rps"
      android:layout_gravity="center"
      android:text="베팅 가위바위보게임"
      android:layout_width="900px"
      android:layout_height="150px"
      android:background="@color/white"></Button>

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="20dp"
      tools:layout_editor_absoluteY="10dp">
  </androidx.constraintlayout.widget.ConstraintLayout>

  <Button
      android:id="@+id/storyGame"
      android:layout_gravity="center"
      android:text="상미고 스토리게임"
      android:layout_width="900px"
      android:layout_height="150px"
      android:background="@color/bu1"></Button>


</LinearLayout>